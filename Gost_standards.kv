<Gost_standards>

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: 5

        BoxLayout:
            size_hint: 1, 0.04
            spacing: 5

            Button:
                text: 'НАЗАД'
                font_size: '15sp'
                on_press:
                    root.manager.current = 'First'
                    root.manager.transition.direction = 'right'

            Button:
                text: 'ВЫХОД'
                font_size: '15sp'

                on_press:
                    app.stop()

        Label:
            text: 'СТАНДАРТЫ'
            font_size: '30sp'
            size_hint: 1, 0.15
            color: [164/255, 0, 0, 1]
            outline_color: 50/255,0,0,1
            outline_width: 2

        GridLayout:
            spacing: 5
            cols: 2
            size_hint: 1, 0.7

            Button:
                text: 'ГОСТ 8691-2018'
                font_size: '15sp'
                on_press:
                    root.open_gost_8691()

            Button:
                text: 'ГОСТ 1598-2018'
                font_size: '15sp'

            Button:
                text: 'ГОСТ 5500-2002'
                font_size: '15sp'