<Trapezoid>:

    title: 'Расчёт площади трапецеидального клина'
    size_hint: 0.85, 0.75
    auto_dismiss: False
    on_open:
        self.build_instance()

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            id: label_gost_number
            text: ''
            size_hint: 1, 0.15



        BoxLayout:
            size_hint: 1, 0.2

            Label:
                id: length_label
                text: 'Длина(L), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: length_value
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(length_value)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                id: width_label
                text: 'Ширина(S), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: width_value_1
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(width_value_1)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                id: width_label_2
                markup: True
                text: 'Ширина(S[sub]1[/sub]), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: width_value_2
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(width_value_2)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                id: thickness_label_S
                markup: True
                text: 'Толщина(H), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: thickness_value
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(thickness_value)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Вес изделия, грамм: '
                size_hint: 0.6, 1
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: weight_product
                text: ''
                multiline: False
                size_hint: 0.3, 1
                hint_text: 'Вес'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                text: 'P'
                size_hint: 0.1, 1
                on_press:
                    root.check_value(var=1)
                    root.calculation()

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                text: 'Объёмный вес, г/см[sup]3[/sup]: '
                size_hint: 0.6, 1
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: volume_weight_product
                text: ''
                multiline: False
                size_hint: 0.3, 1
                hint_text: 'm/V'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Button:
                markup: True
                text: 'P'
                size_hint: 0.1, 1
                on_press:
                    root.check_value(var=2)
                    root.calculation_weight_product()

        Image:
            id: image
            source: ''
            size_hint: 1, 1.2
            size: self.parent.size

        Button:
            text: 'РАССЧИТАТЬ'
            size_hint: 0.8, 0.2
            pos_hint: {'center_x': 0.5}
            on_press:
                root.calculation()
                app.Second.change_text(), app.Third.change_text()
                root.dismiss()

        BoxLayout:
            size_hint: 1, 0.2
            spacing: 5
            AnchorLayout:
                Button:
                    text: 'НАЗАД'
                    font_size: '10sp'
                    size_hint: 0.6, 0.8
                    background_color: 1,0,0,1
                    pos_hint: {'x': 0.6, 'y': 0.5}
                    on_release:
                        root.dismiss()
                        root.return_beck()
            AnchorLayout:
                Button:
                    text: 'ЗАКРЫТЬ'
                    font_size: '10sp'
                    size_hint: 0.6, 0.8
                    background_color: 1,0,0,1
                    pos_hint: {'x': 0.6, 'y': 0.5}
                    on_release:
                        root.dismiss()
