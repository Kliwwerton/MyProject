<Fason>:
    title: 'Расчёт параметров фасонного изделия'
    size_hint: 0.8, 0.4
    auto_dismiss: False
    on_open:
        self.build_instance()

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            id: label_gost_number
            text: ''
            size_hint: 1, 0.15

        BoxLayout:
            size_hint: 1, 0.15
            spacing: 5

            Button:
                text: 'НАЗАД'
                size_hint: 1, 0.9
                font_size: '15sp'
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'ЗАКРЫТЬ'
                size_hint: 1, 0.9
                font_size: '15sp'
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                text: 'Площадь изделия, см[sup]2[/sup]: '
                size_hint: 0.65, 0.8
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: square_product
                text: ''
                multiline: False
                size_hint: 0.35, 0.8
                hint_text: 'Площадь'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                text: 'Объём изделия, см[sup]3[/sup]: '
                size_hint: 0.65, 0.8
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: volume_product
                text: ''
                multiline: False
                size_hint: 0.35, 0.8
                hint_text: 'Объём'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Вес изделия, грамм: '
                size_hint: 0.65, 0.8
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: weight_product
                text: ''
                multiline: False
                size_hint: 0.35, 0.8
                hint_text: 'Вес'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        Button:
            text: 'РАССЧИТАТЬ'
            size_hint: 0.8, 0.15
            pos_hint: {'center_x': 0.5}
            on_press:
                root.calculation()
                app.Second.change_text(), app.Third.change_text()
                root.dismiss()