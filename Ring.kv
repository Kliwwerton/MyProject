<CalculationsAreaOfRing>
    title: 'Расчёт площади кольца'
    size_hint: 0.8, 0.6
    auto_dismiss: False
    on_open:
        self.build_instance()

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        BoxLayout:
            size_hint: 1, 0.20
            spacing: 5

            Button:
                text: 'Назад'
                font_size: '15sp'
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'Закрыть'
                font_size: '15sp'
#                size_hint: 0.3, 0.7
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()

        Label:
            id: label_gost_number
            text: ''
            size_hint: 1, 0.15

        Image:
            source: 'Images/Product_shape/stopor.png'
            size_hint: 1, 1.2

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Наружный диаметр(D):'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                font_size: '10sp'

            TextInput:
                id: outer_diameter_D
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Внутренний диаметр(d):'
                text_size: self.size
                halign: 'left'
                valign: 'center'
                font_size: '10sp'

            TextInput:
                id: inner_diameter_d
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                text: 'Высота(L)[sup][size=24]*[/size][/sup]:'
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: length_value
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        Label:
            markup: True
            size_hint: 1, 0.10
            text: '[sup][size=20]*[/size][/sup] - размер для справки'
            halign: 'left'
            valign: 'center'
            text_size: self.size
            size_hint: 1, 0.2
            font_size: '10sp'

        Button:
            text: 'Рассчитать'
            size_hint: 0.8, 0.20
            pos_hint: {'center_x': 0.5}
            on_press:
                root.calculation_square()
                app.Second.change_text(), app.Third.change_text()
                root.dismiss()
