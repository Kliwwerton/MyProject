#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<MyChLabel@Label>
    halign: 'center'
    valign: 'middle'
    font_size: '20sp'
    color: 64/255,64/255,64/255,1

<MyBox>:
    padding: 5

    GridLayout:
        size_hint: 0.8, 1
        rows: 2

        MyChLabel:
            text: '1'

        MyChLabel:
            text: '2'

        MyChLabel:
            text: '3'

        MyChLabel:
            text: '4'

        MyChLabel:
            text: '5'

        MyChLabel:
            text: '6'

        MyChLabel:
            text: '7'

        MyChLabel:
            text: '8'

        MyChLabel:
            text: '9'

        MyChLabel:
            text: '10'

        Button:
            text: 'Add'
            size_hint: 0.2, 0.8
            pos_hint: {'center_y': 0.5}


<Fourth>:

    BoxLayout:
        orientation: 'vertical'
        padding: 5

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size_hint: 1, 0.15
            padding: 10,10,10,10

            Label:
                text: 'Расчёт химического состава смеси.'
                halign: 'center'
                valign: 'middle'
                font_size: '20sp'
#                size_hint: 1, 0.2
                color: 64/255,64/255,64/255,1

        BoxLayout:
            size_hint: 1, 0.2

            Button:
                text: 'Добавить компонент'
                size_hint: 1, 0.5
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press:
                    root.add_new_component()

        BoxLayout:
            id: first_box
            name: ''
            size_hint: 1, 0.18

        BoxLayout:
            id: second_box
            name: ''
            size_hint: 1, 0.18

        BoxLayout:
            id: third_box
            name: ''
            size_hint: 1, 0.18

        BoxLayout:
            id: fourth_box
            name: ''
            size_hint: 1, 0.18

        BoxLayout:
            id: fifth_box
            name: ''
            size_hint: 1, 0.18


        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            size_hint: 1, 0.13

            Button:
                text: 'РАССЧИТАТЬ'
                font_size: '20sp'
                size_hint: 0.5, 1
#                background_normal: ''
#                background_color: 0.4,0,1,1
#                on_release:
#                    root.calculate()
#
        BoxLayout:
            size_hint: 1, 0.25
            orientation: 'vertical'

            Label:
                id: label_P_pressing_text
                text: 'Результат расчёта'
                markup: True
                size_hint: 1, 0.8
                color: 1,0,0,1
                font_size: '20sp'

            Label:
                id: label_P_pressing_value
                markup: True
                text: 'да'
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                font_size: '20sp'
                color: 64/255,64/255,64/255,1

        Button:
            size_hint: 0.6, 0.12
            text: 'СБРОС'
            font_size: '20sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press:
                root.open_ressetPopup()


        FloatLayout:
            size_hint: 0.8, 0.15
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                size_hint: 0.25, 0.6
                text: 'НАЗАД'
                font_size: '10sp'
                pos_hint: {'center_x': 0.25, 'center_y': 0.4}
                background_color: 1,0,0,1
                on_release:
                    root.manager.current = 'First'
#                    root.manager.transition = SwapTransition()

            Button:
                id: button_exit
                text: 'ВЫХОД'
                font_size: '10sp'
                background_color: 1,0,0,1
                size_hint: 0.25, 0.6
                pos_hint: {'center_x': 0.75, 'center_y': 0.4}
                on_release:
                    app.close_app()