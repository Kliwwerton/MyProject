#: import SwapTransition kivy.uix.screenmanager.SwapTransition

<Fourth>:

    BoxLayout:
        id: main_box
        orientation: 'vertical'
        padding: 5
        spacing: 5

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size_hint: 1, 0.2
            padding: 10,10,10,10

            LabelGray:
                text: 'Расчёт химического состава смеси.'

        Button:
            id: btn_add_component
            text: 'ДОБАВИТЬ КОМПОНЕНТ'
            size_hint: 1, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            border: 25, 8, 8, 8
            on_release:
                root.add_new_component()

        BoxForElement:
            id: first_box

        BoxForElement:
            id: second_box

        BoxForElement:
            id: third_box

        BoxForElement:
            id: fourth_box

        BoxForElement:
            id: fifth_box

        BoxLayout:
            size_hint: 1, 0.13

            Label:
                size_hint: 0.6, 1

            RelativeLayout:
                id: calc_but
                size_hint: 1, 1

            RelativeLayout:
                size_hint: 0.6, 1

        BoxLayout:
            id: box_result
            size_hint: 1, 0.25

        BoxLayout:
            id: reset_but
            size_hint: 0.6, 0.12
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        FloatLayout:
            size_hint: 0.8, 0.13
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                size_hint: 0.25, 0.6
                text: 'НАЗАД'
                font_size: '10sp'
                pos_hint: {'center_x': 0.25, 'center_y': 0.4}
                background_color: 1,0,0,1
                on_release:
                    root.manager.current = 'First'

            Button:
                id: button_exit
                text: 'ВЫХОД'
                font_size: '10sp'
                background_color: 1,0,0,1
                size_hint: 0.25, 0.6
                pos_hint: {'center_x': 0.75, 'center_y': 0.4}
                on_release:
                    app.close_app()