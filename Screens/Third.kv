<Third>:
    name: 'Third'

    BoxLayout:
        orientation: 'vertical'
        padding:10
        spacing:10

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            size_hint: 1, 0.3
            padding:10,30,10,0

            Label:
                text: 'Расчёт удельного давления\n через прессовое.'
                halign: 'center'
                valign: 'middle'
                font_size: '20sp'
                size_hint: 1, 0.2
                color: 64/255,64/255,64/255,1

        Spinner:
            id: spinner_press_mark
            size_hint: 1, 0.12
#            background_normal: '0,0,0,0'
#            background_color: 44/255 ,164/255, 45/255, 1
#            color: 0/255 ,22/255, 203/255, 1
            font_size: '20sp'
            text: 'Выберите пресс'
            values: ['LAEIS-1250', 'SACMI-1000', 'SACMI-500', 'YPR-2500', 'ДО-542', 'ДА-2238 (ЦИЧО)', 'СМ-1085', 'ПЮ', 'ПД-476 (ЦИЧО)', 'П-483 (ЦИЧО)', 'П-474А (ЦИЧО)', 'ИП-500М-АВТО']
            on_text:
                root.change_label()

        Button:
            text: 'Размеры и вес изделия (ВВОД)'
            font_size: '20sp'
            size_hint: 1,0.12
#            background_color: 0.2, 1, 0.7, 1
            on_release:
                root.open_selection_option_popup()

        BoxLayout:
            spacing: 10
            size_hint: 1, 0.12
            Label:
                text: 'S изделия: '
                font_size: '20sp'
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                size_hint: 0.3, 1
                color: 64/255,64/255,64/255,1

            TextInput:
                id: label_S_pressing_value
                markup: True
                multiline: False
                font_size: '20sp'
                color: 64/255,64/255,64/255,1
                hint_text: 'Площадь'
                size_hint: 0.45, 1
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Label:
                markup: True
                font_size: '20sp'
                color: 64/255,64/255,64/255,1
                size_hint: 0.2, 1
                text: 'см[sup]2[/sup]'

        GridLayout:
            size_hint: 1, 0.30
            spacing: 15
            cols: 3

            Label:
                text: 'Кол-во штампов: '
                font_size: '20sp'
                color: 64/255,64/255,64/255,1
                pos_hint: {'x': 0.0, 'y': 0.5}
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            Spinner:
                id: spinner_quantity_stamps
                size_hint: 0.35, 1
#                background_normal: '0,0,0,0'
#                background_color: 44/255 ,164/255, 45/255, 1
#                color: 0/255 ,22/255, 203/255, 1
                font_size: '20sp'
                text: '0'
                values: ['1', '2', '3', '4']

            Label:
                text: 'шт.'
                color: 64/255,64/255,64/255,1
                font_size: '20sp'
                size_hint: 0.4, 1

            Label:
                text: 'Прессовое давление: '
                font_size: '20sp'
                color: 64/255,64/255,64/255,1
                pos_hint: {'x': 0.0, 'y': 0.5}
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            TextInput:
                id: pressure
                multiline: False
                size_hint: 0.3, 1
                font_size: '20sp'
                hint_text: 'P'
                color: 64/255,64/255,64/255,1
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            Label:
                id: pressure_unit
                markup: True
                text: ''
                color: 64/255,64/255,64/255,1
                font_size: '20sp'
                size_hint: 0.4, 1

        BoxLayout:
            size_hint: 1, 0.06

            Label:
                id: stamp_text
                size_hint: 0.4, 1
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            Label:
                id: stamp_label
                size_hint: 0.6, 1
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

        Label:
            id: gost_text
            text: ''
            size_hint: 1, 0.06
            color: 64/255,64/255,64/255,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'

        BoxLayout:
            size_hint: 1, 0.06

            Label:
                id: volume_label
                size_hint: 0.4, 1
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            Label:
                id: volume_value
                markup: True
                size_hint: 0.6, 1
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

        BoxLayout:
            size_hint: 1, 0.06

            Label:
                id: weight_value
                markup: True
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

            Label:
                id: volume_weight
                markup: True
                text: ''
                color: 64/255,64/255,64/255,1
                text_size: self.size
                halign: 'left'
                valign: 'middle'

#        Label:
#            id: volume_weight
#            markup: True
#            size_hint: 1, 0.06
#            text: ''
#            color: 64/255,64/255,64/255,1
#            text_size: self.size
#            halign: 'left'
#            valign: 'middle'

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            size_hint: 1, 0.13

            Button:
                text: 'РАСЧИТАТЬ'
                font_size: '20sp'
                size_hint: 0.5, 1
#                background_normal: ''
#                background_color: 0.4,0,1,1
                on_release:
                    root.calculate()

# Вывод информации на табло
        BoxLayout:
            size_hint: 1, 0.25
            orientation: 'vertical'

            Label:
                id: label_P_pressing_text
                text: ''
                markup: True
                size_hint: 1, 0.8
                color: 1,0,0,1
                font_size: '20sp'

            Label:
                id: label_P_specific_pressure_value
                markup: True
                text: ''
                color: 64/255,64/255,64/255,1
                halign: 'center'
                valign: 'middle'
                text_size: self.size
                font_size: '20sp'

# Функциональные кнопки
        Button:
            size_hint: 0.6, 0.12
            text: 'СБРОС'
            font_size: '20sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
#            background_color: 12/255,6/255,120/255,1
#            background_normal: ''
            on_press:
                root.open_resset_popup()

        FloatLayout:
            padding: 0,0,0,20
            size_hint: 0.8, 0.13
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                size_hint: 0.25, 0.6
                text: 'НАЗАД'
                font_size: '10sp'
                pos_hint: {'center_x': 0.25, 'center_y': 0.4}
                background_color: 1,0,0,1
                on_release:
                    root.manager.current = 'First'

            Button:
                id: button_exit
                text: 'ВЫХОД'
                font_size: '10sp'
                background_color: 1,0,0,1
                size_hint: 0.25, 0.6
                pos_hint: {'center_x': 0.75, 'center_y': 0.4}
                on_release:
                    app.close_app()
