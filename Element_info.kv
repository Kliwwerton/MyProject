#: import Box Chemical_elements.Box

<BoxComponent>


<BigBox>:
    spacing: 2
    padding: 5
    canvas.before:

        Color:
            rgba: 98/255, 95/255, 255/255, 1
        BoxShadow:
            pos: self.pos
            size: self.size
            inset: True
            offset: 0, 0
            blur_radius: 10
            spread_radius: 5, 5
            border_radius: 8, 8, 8, 8

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.80, 1

        BoxLayout:
            size_hint: 1, 0.33

            MyChLabel:
                id: number_component
                font_size: '15sp'
                color: 64/255,64/255,64/255,1

            MyChLabel:
                id: components_name
                text_size: self.size
                halign: 'left'
                color: 64/255,64/255,64/255,1

        BoxLayout:
            id: box_for_elements
            size_hint: 1, 0.66
            spacing: 2

    BoxLayout:
        size_hint: 0.2, 1
        orientation: 'vertical'

        LabelGray:
            id: lab_lab
            font_size: '12sp'
            pos_hint: {'center_x': 0.5, 'center_y': 1}

        LabelGray:
            id: lab_value_element


<BigBoxResult>:
    spacing: 2

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.80, 1

        LabelGray:
            id: number_component
            size_hint: 1, 0.25
#            font_size: '15sp'

        BoxLayout:
            size_hint: 1, 0.25

            LabelGray:
                id: components_name
                text_size: self.size
                font_size: '15sp'

            LabelGray:
                id: ratio_composition
                size_hint: 0.33, 1
                font_size: '15sp'

        BoxLayout:
            id: box_for_elements
            size_hint: 1, 0.66
            spacing: 2

