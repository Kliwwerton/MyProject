<SelectionOptionPopup>
    title: 'Расчёт площади изделия'
    size_hint: 0.8, 0.14
    pos_hint: {'center_x': 0.5, 'top': 0.7}

    Spinner:
        id: option_selection
        text: 'Выберите вариант расчёта(подбора)'
        font_size: '15sp'
        values: ['Размеры по ГОСТ', 'Расчёт по размерам']
        on_text:
            root.open_next_popup()
            root.dismiss()


<SelectionGostPopup>
    title: 'Выбор ГОСТа на размеры'
    auto_dismiss: False
    size_hint: 0.8, 0.28

    BoxLayout:
        orientation:'vertical'
        spacing: 10

        BoxLayout:
            size_hint: 1, 1.2
            spacing: 5

            Button:
                text: 'Назад'
                font_size: '15sp'
                size_hint: 0.3, 0.7
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'Закрыть'
                font_size: '15sp'
                size_hint: 0.3, 0.7
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()


        Spinner:
            id: gost_number
            text: 'Выберите ГОСТ'
            values: ['ГОСТ 8691-2018', 'ГОСТ 1598-2018 (ШПД)', 'ГОСТ 1598-2018 (МЛЛД)', 'ГОСТ 5341-2016', 'ГОСТ 5500-2001', 'ГОСТ 21436-2004', 'ГОСТ 20901-2016']
            on_text:
                root.choosing_a_product_number()

        Spinner:
            id: product_numbers
            text: 'Номер изделия'
            values: []
            on_text:
                root.dismiss()
                root.opening_calculation_window()


<ChoosingShapeProduct>
    title: 'Выбор формы изделия'
    auto_dismiss: False
    size_hint: 0.8, 0.2

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.7
            spacing: 5

            Button:
                text: 'Назад'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'Закрыть'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()

        Spinner:
            id: spin_choose_window
            size_hint: 1, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: 'Выберите форму изделия'
            values: ['Прямоугольник', 'Трапецеидальный клин', 'Ребровый клин', 'Трубка']
            on_text:
                root.dismiss()
                root.choose_window()

<WrongPopup>
    title: 'Сообщение об ошибке!'
    size_hint: 0.8, 0.2
    on_open:
        self.build_instance()
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            id: label_wrong
            text: ''

        Button:
            size_hint: 0.8, 0.8
            pos_hint: {'center_x': 0.5}
            text: 'Закрыть'
            on_press: root.dismiss()

<RessetPopup>
    title: 'Подтвердите сброс данных'
    size_hint: 0.8, 0.2

    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'

        Label:
            text: 'При подтверждении будут удалены \nвсе введённые ранее данные!!!'
            halign: 'center'
            valign: 'middle'
            font_size: '15sp'
            color: [255/255, 0, 0, 1]

        BoxLayout:
            spacing: 5

            Button:
                text: 'СБРОС!!!'
                size_hint: 1, 0.8
                on_press:
                    app.Second.reset()
                    root.dismiss()

            Button:
                text: 'Отмена'
                size_hint: 1, 0.8
                on_press:
                    root.dismiss()

