#:import Factory kivy.factory.Factory

<MyLabel@Label>
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    font_size: '15sp'
    color: [1, 0, 0, 1] # red


<LabelGray@Label>
    markup: True
    halign: 'center'
    valign: 'middle'
    font_size: '20sp'
    color: 64/255,64/255,64/255,1 # gray


<MyChLabel@Label>
    markup: True
    halign: 'center'
    valign: 'middle'
    font_size: '20sp'
    color: 1, 1, 1, 1 # white


<SpinnerOption>
    markup: True
    font_size: '15sp'


<SelectionOptionPopup>
    title: 'Расчёт параметров изделия'
    size_hint: 0.8, 0.32
    pos_hint: {'center_x': 0.5, 'top': 0.7}

    BoxLayout:
        padding: 5
        spacing: 10
        orientation: 'vertical'

#        BoxLayout:
#            size_hint: 1, 1.2
#            spacing: 5
#
#            Button:
#                text: 'ЗАКРЫТЬ'
#                font_size: '15sp'
#                size_hint: 0.3, 0.7
#                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
#                on_press:
#                    root.dismiss()

        Label:
            text: 'ВАРИАНТЫ РАСЧЁТА'
            size_hint: 1, 0.6

        Button:
            text: 'Размеры по ГОСТ'
            on_press:
                root.open_next_popup()
                root.dismiss()

        Spinner:
            id: spin_choose_window
            text: 'Выберите форму изделия'
            font_size: '15sp'
            values: ['Прямоугольник', 'Трапецеидальный клин', 'Ребровый клин', 'Трубка', 'Произвольное']
            on_text:
                root.choose_window()
                root.dismiss()

        AnchorLayout:
            size_hint: 1, 1
#            spacing: 5

            Button:
                text: 'ЗАКРЫТЬ'
                font_size: '10sp'
                size_hint: 0.25, 0.6
                background_color: 1,0,0,1
                pos_hint: {'x': 0.5, 'y': 0.5}
                on_release:
                    root.dismiss()


<SelectionGostPopup>
    title: 'Выбор ГОСТа на размеры'
    auto_dismiss: False
    size_hint: 0.8, 0.28

    BoxLayout:
        orientation:'vertical'
        spacing: 10

        Spinner:
            id: gost_number
            text: 'Выберите ГОСТ'
            values: ['ГОСТ 8691-2018', 'ГОСТ 1598-2018 (ШПД)', 'ГОСТ 1598-2018 (МЛЛД)', 'ГОСТ 5341-2016', 'ГОСТ 5500-2001', 'ГОСТ 11586-2005', 'ГОСТ 21436-2004', 'ГОСТ 20901-2016']
            on_text:
                root.choosing_a_product_number()

        Spinner:
            id: product_numbers
            text: 'Номер изделия'
            values: []
            on_text:
                root.dismiss()
                root.opening_calculation_window()

        BoxLayout:
            size_hint: 1, 1.2
            spacing: 5

            AnchorLayout:

                Button:
                    text: 'НАЗАД'
                    font_size: '10sp'
                    size_hint: 0.5, 0.5
                    background_color: 1,0,0,1
                    pos_hint: {'x': 0.6, 'y': 0.5}
                    on_release:
                        root.dismiss()
                        root.return_beck()

            AnchorLayout:

                Button:
                    text: 'ЗАКРЫТЬ'
                    font_size: '10sp'
                    size_hint: 0.5, 0.5
                    background_color: 1,0,0,1
                    pos_hint: {'x': 0.6, 'y': 0.5}
                    on_release:
                        root.dismiss()


<WrongPopup>
    title: 'Сообщение об ошибке!'
    size_hint: 0.8, 0.2
    on_open:
        self.build_instance()
    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            id: label_wrong
            text: ''

        Button:
            size_hint: 0.8, 0.8
            pos_hint: {'center_x': 0.5}
            text: 'Закрыть'
            on_press: root.dismiss()


<RessetPopup>
    title: 'Подтвердите сброс данных'
    size_hint: 0.8, 0.2

    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'

        MyLabel:
            id: warning_text
            text: 'При подтверждении будут удалены \n все введённые ранее данные!!!'

        BoxLayout:
            spacing: 5

            Button:
                id: btn_res
                text: 'СБРОС!!!'
                size_hint: 1, 0.8
                on_press:
                    root.reset_all()
                    root.dismiss()

            Button:
                text: 'ОТМЕНА'
                size_hint: 1, 0.8
                on_press:
                    root.dismiss()


<ClosePopup>
    size_hint: 0.8, 0.2
    title: 'Завершение работы'

    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'

        MyLabel:
            text: 'Хотите закрыть приложение?'

        BoxLayout:
            spacing: 5

            Button:
                text: 'ДА'
                size_hint: 1, 0.8
                on_press:
                    root.dismiss()
                    app.stop()

            Button:
                text: 'НЕТ'
                size_hint: 1, 0.8
                on_press:
                    root.dismiss()


<MistakePopup>:
    title: 'Ошибка!'
    size_hint: 0.8, 0.2

    BoxLayout:
        padding: 5
        spacing: 2
        orientation: 'vertical'

        MyLabel:
            id: text_label
            size_hint: 1, 0.3
            text: 'Не хватает данных!'

        BoxLayout:
            size_hint: 1, 0.5
            orientation: 'vertical'
            id: mistake_box

            MyLabel:
                id: text_mistake
                markup: True
                text: ''

        Button:
            id: mistake_but
            text: 'OK'
            size_hint: 0.2, 0.4
            pos_hint: {'center_x': 0.5}
            on_press:
                root.dismiss()

<Addition>:
    title: 'Размеры. Среднее значение.'
    size_hint: 0.8, 0.25

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        GridLayout:
            spacing: 5
            cols: 3
            size_hint: 1, 0.6

            Label:
                text: 'Замер 1'

            Label:
                text: 'Замер 2'

            Label:
                text: 'Замер 3'

            TextInput:
                id: length_first
                text: ''
                size_hint: 0.35, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            TextInput:
                id: length_second
                text: ''
                size_hint: 0.35, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

            TextInput:
                id: length_third
                text: ''
                size_hint: 0.35, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        Button:
            text: 'РАСЧИТАТЬ'
            size_hint: 1, 0.4
            on_press:
                root.dismiss()
                root.write_average_value()

        AnchorLayout:
            size_hint: 1, 0.35

            Button:
                text: 'ЗАКРЫТЬ'
                font_size: '10sp'
                size_hint: 0.25, 0.8
                background_color: 1,0,0,1
                pos_hint: {'x': 0.5, 'y': 0.5}
                on_release:
                    root.dismiss()


<NewElement>:
    title: 'Новый элемент'
    size_hint: 0.8, 0.3
    auto_dismiss: False

    BoxLayout:
        padding: 5
        spacing: 5
        orientation: 'vertical'

        Spinner:
            id: spinner_element
            markup: True
            size_hint: 0.8, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: '15sp'
            text: 'Выберите элемент'
            on_text:
#                root.check_value()
                root.build()

        MyTextInput:
            id: element_value
            size_hint: 0.3, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            text: 'Добавить элемент'
            size_hint: 0.6, 0.6
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release:
                root.add_element()

        AnchorLayout:
            size_hint: 1, 0.7

            Button:
                text: 'ЗАКРЫТЬ'
                font_size: '10sp'
                size_hint: 0.3, 0.7
                background_color: 1,0,0,1
                pos_hint: {'x': 0.5, 'y': 0.5}
                on_release:
                    root.dismiss()
