<SelectionOptionPopup>
    title: 'Расчёт площади изделия'
    size_hint: 0.8, 0.14
    pos_hint: {'center_x': 0.5, 'top': 0.7}

    Spinner:
        id: option_selection
        text: 'Выберите вариант расчёта(подбора)'
        font_size: '15sp'
        values: ['Размеры по ГОСТ', 'Расчёт по размерам']
        on_text:
            root.open_next_popup()
            root.dismiss()


<SelectionGostPopup>
    title: 'Выбор ГОСТа на размеры'
    size_hint: 0.8, 0.14

    BoxLayout:
        orientation:'vertical'

        Spinner:
            id: gost_number
            text: 'Выберите ГОСТ'
            values: ['ГОСТ 390-2018', '1598-2018', '5341-2016', '5500-2001', 'Р 53066-2008', '21436-2004']
            on_text:
                root.choosing_a_product_number()

        Spinner:
            id: product_number
            text: 'Номер изделия'
            values: []

