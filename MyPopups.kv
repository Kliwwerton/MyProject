<SelectionOptionPopup>
    title: 'Расчёт площади изделия'
    size_hint: 0.8, 0.14
    pos_hint: {'center_x': 0.5, 'top': 0.7}

    Spinner:
        id: option_selection
        text: 'Выберите вариант расчёта(подбора)'
        font_size: '15sp'
        values: ['Размеры по ГОСТ', 'Расчёт по размерам']
        on_text:
            root.open_next_popup()
            root.dismiss()


<SelectionGostPopup>
    title: 'Выбор ГОСТа на размеры'
    size_hint: 0.8, 0.28

    BoxLayout:
        orientation:'vertical'
        spacing: 10

        BoxLayout:
            size_hint: 1, 1.2
            spacing: 5
            Button:
                text: 'Назад'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'Закрыть'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()


        Spinner:
            id: gost_number
            text: 'Выберите ГОСТ'
            values: ['ГОСТ 8691-2018', 'ГОСТ 1598-2018', '5341-2016', '5500-2001', 'Р 53066-2008', '21436-2004']
            on_text:
                root.choosing_a_product_number()

        Spinner:
            id: product_number
            text: 'Номер изделия'
            values: []
            on_text:
                root.dismiss()
                root.opening_calculation_window()


<CalculationsAreaOfRectangle>
    title: 'Расчёт площади изделия'
    size_hint: 0.8, 0.5
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            size_hint: 1, 0.25
            spacing: 5
            Button:
                text: 'Назад'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'Закрыть'
                font_size: '15sp'
                size_hint: 0.3, 0.6
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()
        Image:
            source: 'Images/Product_shape/rectangle.png'
            size_hint: 1, 1

        BoxLayout:
            size_hint: 1, 0.2
            Label:
                text: 'Длина(L):'
            TextInput:
                id: length_value
                text: ''
        BoxLayout:
            size_hint: 1, 0.2
            Label:
                text: 'Ширина(H):'
            TextInput:
                id: width_value
                text: ''

        BoxLayout:
            size_hint: 1, 0.2
            Label:
                text: 'Толщина(S):'
            TextInput:
                id: height_value
                text: ''


