<Tube>:
    title: 'Расчёт площади трубки'
    size_hint: 0.8, 0.6
    auto_dismiss: False
    on_open:
        self.build_instance()

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        BoxLayout:
            size_hint: 1, 0.20
            spacing: 5

            Button:
                text: 'НАЗАД'
                font_size: '15sp'
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'ЗАКРЫТЬ'
                font_size: '15sp'
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()

        Label:
            id: label_gost_number
            text: ''
            size_hint: 1, 0.15

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Наружный диаметр(D), мм :'
                size_hint: 0.65, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'
                font_size: '12sp'

            TextInput:
                id: outer_diameter_D
                size_hint: 0.35, 1
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Внутренний диаметр(d), мм:'
                size_hint: 0.65, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'
                font_size: '12sp'

            TextInput:
                id: inner_diameter_d
                size_hint: 0.35, 1
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                size_hint: 0.65, 1
                text: 'Высота(L), мм:'
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: length_value
                size_hint: 0.35, 1
                text: ''
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Вес изделия, грамм: '
                size_hint: 0.65, 1
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: weight_product
                text: ''
                multiline: False
                size_hint: 0.35, 1
                hint_text: 'Вес изделия'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'

        Image:
            id: image
#            source: ''
            size_hint: 1, 1.2

        Button:
            text: 'РАССЧИТАТЬ'
            size_hint: 0.8, 0.20
            pos_hint: {'center_x': 0.5}
            on_press:
                root.calculation()
                app.Second.change_text(), app.Third.change_text()
                root.dismiss()
