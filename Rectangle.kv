<Rectangle>:

    title: 'Расчёт параметров прямоугольного изделия'
    size_hint: 0.85, 0.7
#    pos_hint: {'x': 50, 'y': 100}
    auto_dismiss: False
    on_open:
        self.build_instance()

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        BoxLayout:
            size_hint: 1, 0.2
            spacing: 5

            Button:
                text: 'НАЗАД'
                font_size: '15sp'
                pos_hint: {'left_bottom': 0, 'center_y': 0.5}
                on_press:
                    root.dismiss()
                    root.return_beck()

            Button:
                text: 'ЗАКРЫТЬ'
                font_size: '15sp'
                pos_hint: {'right_bottom': 1, 'center_y': 0.5}
                on_press:
                    root.dismiss()

        Label:
            id: label_gost_number
            text: ''
            size_hint: 1, 0.15

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Длина(L), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: length_value
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'
                on_text:
                    root.calculation()
                    root.change_text()

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(length_value)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Ширина(H), мм:'
                size_hint: 0.6, 1
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: width_value
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'
                on_text:
                    root.calculation()
                    root.change_text()

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(width_value)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                size_hint: 0.6, 1
                text: 'Толщина(S), мм:'
                text_size: self.size
                halign: 'left'
                valign: 'center'

            TextInput:
                id: thickness_value
                text: ''
                size_hint: 0.3, 1
                multiline: False
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'
                on_text:
                    root.calculation()
                    root.change_text()

            Button:
                text: '...'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(thickness_value)

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                text: 'Вес изделия, грамм: '
                size_hint: 0.6, 1
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: weight_product
                text: ''
                multiline: False
                size_hint: 0.3, 1
                hint_text: 'Вес'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'
#                on_text:
#                    root.calculation()
#                    root.change_text()

            Button:
                text: 'P'
                size_hint: 0.1, 1
                on_press:
                    root.calculation_volume_weight()

        BoxLayout:
            size_hint: 1, 0.2

            Label:
                markup: True
                text: 'Объёмный вес, г/см[sup]3[/sup]: '
                size_hint: 0.6, 1
                halign: 'left'
                valign: 'center'
                text_size: self.size

            TextInput:
                id: volume_weight_product
                text: ''
                multiline: False
                size_hint: 0.3, 1
                hint_text: 'm/V'
                halign: 'center'
                padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
                input_tipe: 'number'
                input_filter: 'float'
#                on_text:
#                    root.calculation_weight_product()
#                    root.change_text_weight_product()

            Button:
                markup: True
                text: 'P'
                size_hint: 0.1, 1
                on_press:
                    root.open_calculation_average_popup(volume_weight_product)

        Image:
            source: 'Images/Product_shape/rectangle.png'
            size_hint: 1, 1.2

        Button:
            text: 'РАССЧИТАТЬ'
            size_hint: 0.8, 0.2
            pos_hint: {'center_x': 0.5}
            on_press:
                root.calculation()
                app.Second.change_text(), app.Third.change_text()
                root.dismiss()
